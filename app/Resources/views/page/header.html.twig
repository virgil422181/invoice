<div id="container">
    <div class="row">
        <div class="col-md-3">
            <!-- header-left start -->
            <!-- ================ -->
            <div class="header-left clearfix">
                <!-- logo -->
                <div id="logo" class="logo">
                    <a href="#"><img id="logo_img" src="http://htmlcoder.me/preview/the_project/v.1.1/template/images/logo_vivid_red.png" alt="The Project"></a>
                </div>
                <!-- name-and-slogan -->
                <div class="site-slogan">
                    {{ 'header.slogan'|trans({},'messages') }}
                </div>

            </div>
            <!-- header-left end -->
        </div>
        <div class="col-md-9">
            <ul class="nav navbar-nav ">
                <li><a href="{{ path('cms_homepage') }}">{{ 'menu.home'|trans }}</a></li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('cms_homepage') }}">{{ 'menu.users'|trans }}</a></li>
                    <li><a href="{{ path('cms_homepage') }}">{{ 'menu.categories'|trans }}</a></li>
                    <li><a href="{{ path('cms_homepage') }}">{{ 'menu.pages'|trans }}</a></li>
                {% elseif is_granted('ROLE_USER') %}
                    <li><a href="{{ path('cms_homepage') }}">{{ 'menu.pages'|trans }}</a></li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
                    <li><a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
                {% else %}
                    <li><a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></li>
                {% endif %}
            </ul>
        </div>
    </div>