{% extends "UsersBundle::layout.html.twig" %}
{% block fos_user_content %}
    <div class="container">
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info" >
                <div class="panel-heading">
                    <div class="panel-title">
                        {% block security_login_panel_title %}{% endblock %}
                    </div>
                    {% if app.request.get('_route') == 'fos_user_security_login' %}
                        <div style="float:right; font-size: 80%; position: relative; top:-10px">
                            <a href="{{ path('fos_user_resetting_request') }}">
                                {{'security.login.forgotten_password'|trans({}, 'FOSUserBundle') }}
                            </a>
                        </div>
                    {% endif %}
                </div>
                <div style="padding-top:30px" class="panel-body" >
                    {% block security_login_form %}{% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
