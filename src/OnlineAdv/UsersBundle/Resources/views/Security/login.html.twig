{% extends "UsersBundle::login_form_layout.html.twig" %}

{% block title %}
    {{ 'layout.login'|trans({}, 'FOSUserBundle') }}
{% endblock %}

{% block security_login_panel_title %}
    {{ 'layout.login'|trans({}, 'FOSUserBundle') }}
{% endblock %}

{% block security_login_form %}
    {% if error %}
        <div id="login-alert" class="alert alert-danger col-sm-12">
            {{ error|trans({}, 'FOSUserBundle') }}
        </div>
    {% endif %}
    <form id="loginform" class="form-horizontal" role="form" action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input id="username" type="text" class="form-control" name="_username"  value="{{ last_username }}" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}" required="required" />
        </div>
        <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <input id="password" type="password" class="form-control" name="_password" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" required="required" />
        </div>
        <div class="input-group">
            <div class="checkbox">
                <label>
                    <input id="remember_me" type="checkbox" name="_remember_me" value="on"> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                </label>
            </div>
        </div>
        <div style="margin-top:10px" class="form-group">
            <!-- Button -->
            <div class="col-sm-12 controls">
                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-success"/>
                {# <a id="btn-fblogin" href="#" class="btn btn-primary">Autentificare cu Facebook</a> #}
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12 control">
                <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                    {{ 'security.login.no_account'|trans({}, 'FOSUserBundle') }}
                    <a href="{{ path('fos_user_registration_register') }}"">
                        {{ 'security.login.register'|trans({},'FOSUserBundle') }}
                    </a>
                </div>
            </div>
        </div>
    </form>
{% endblock %}

